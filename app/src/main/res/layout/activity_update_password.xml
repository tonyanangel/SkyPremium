<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.skypremiuminternational.app.app.features.forgot_password.update.UpdatePasswordActivity"
    >

  <include layout="@layout/include_toolbar"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Please enter your current password."
        style="@style/TextAppearance.AppCompat.Body1"
        />

    <com.skypremiuminternational.app.app.features.skytextinputlayout.SkyTextInputLayout
        android:id="@+id/stilCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="Current Password"
        android:inputType="text"
        tools:text="test1234"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Please enter your new password."
        style="@style/TextAppearance.AppCompat.Body1"
        />

    <com.skypremiuminternational.app.app.features.skytextinputlayout.SkyTextInputLayout
        android:id="@+id/stilNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="New Password"
        android:inputType="text"
        tools:text="test1234"
        />

    <com.skypremiuminternational.app.app.features.skytextinputlayout.SkyTextInputLayout
        android:id="@+id/stilConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="text"
        tools:text="test1234"
        />

  </LinearLayout>

  <com.andrognito.kerningview.KerningTextView
      android:id="@+id/tvSubmit"
      android:layout_width="match_parent"
      android:text="Submit"
      style="@style/ButtonStyle"
      />

</LinearLayout>
