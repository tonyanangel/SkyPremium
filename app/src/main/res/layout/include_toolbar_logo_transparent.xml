<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    style="@style/Toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNavigation_toolbar"
            style="@style/ToolbarIcon"
            android:src="@drawable/ic_navigation" />

        <ImageView
          android:id="@+id/ivSearch_toolbar"
          style="@style/ToolbarMiddleIcon"
          android:src="@drawable/ic_search"  />

        <ImageView
            android:id="@+id/icon_skypremium"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo_full_splash" />



        <RelativeLayout
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:visibility="visible">

            <ImageView
              android:id="@+id/ivNotificationBell"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentEnd="true"
              android:layout_marginTop="-1dp"
              android:layout_marginEnd="0dp"
              android:padding="8dp"
              android:src="@drawable/bell" />

            <FrameLayout
              android:id="@+id/ly_notification_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="8dp"
              android:layout_marginRight="4dp"
              android:background="@drawable/circle_light_green"
              android:padding="1dp"
              android:visibility="visible">

                <TextView
                  android:id="@+id/tv_notification_count"
                  style="@style/TextAppearance.AppCompat.Caption"
                  android:layout_width="wrap_content"
                  android:layout_height="14dp"
                  android:minWidth="14dp"
                  android:gravity="center"
                  android:text="9"
                  android:textColor="@color/white" />

            </FrameLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivCart_toolbar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cart" />

            <FrameLayout
                android:id="@+id/ly_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/circle_orchid"
                android:padding="1dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_cart_count"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white" />

            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>