<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/extra_small_padding"
    android:background="@color/white"
    android:paddingBottom="@dimen/triple_padding"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/triple_padding"
    tools:ignore="MissingPrefix">

  <TextView
      android:id="@+id/txt_person_name"
      fontPath="@string/fonts_Lato_Bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/small_padding"
      android:layout_marginEnd="40dp"
      android:text="@string/txt_person_name_address"
      android:textColor="@color/textColorPrimary" />

  <TextView
      android:id="@+id/txt_edit"
      style="@style/TextAppearance.AppCompat.Caption"
      fontPath="@string/fonts_Lato_Bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:gravity="right"
      android:letterSpacing="0.1"
      android:text="@string/txt_edit"
      android:textAllCaps="true"
      android:textColor="@color/textGreyChateau" />

  <TextView
      android:id="@+id/txt_company"
      fontPath="@string/fonts_Lato_Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_person_name"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="@dimen/small_padding"
      android:lineSpacingMultiplier="1.3"
      tools:text="dky"
      android:visibility="gone"
      android:textColor="@color/textColorPrimary" />
  <TextView
      android:id="@+id/txt_address"
      fontPath="@string/fonts_Lato_Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_company"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="@dimen/small_padding"
      android:lineSpacingMultiplier="1.3"
      android:text="@string/txt_address"
      android:textColor="@color/textColorPrimary" />
  <TextView
      android:id="@+id/txt_phone"
      fontPath="@string/fonts_Lato_Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_address"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="@dimen/small_padding"
      android:lineSpacingMultiplier="1.3"
      tools:text="123"
      android:textColor="@color/textColorPrimary" />
  <ImageView
      android:id="@+id/img_checked"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:src="@drawable/ic_check_circle_orchid"
      android:visibility="gone"/>
</RelativeLayout>