<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:gravity="bottom"
    android:minWidth="360dp"
    android:orientation="vertical"
    >

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="-28dp"
      android:layout_marginLeft="-10dp"
      android:layout_marginRight="-10dp"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="16dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/occupancy_picker_title"
            fontPath="@string/fonts_Adobe_Garamond_Pro_Regular"
            tools:ignore="MissingPrefix"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_homeasup_accent"
            />

        <TextView
            android:id="@+id/txtClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:text="@string/occupancy_picker_action_clear"
            android:textAllCaps="true"
            />

      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/margin_small"
          android:background="@color/colorLightGray"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/occupancy_picker_no_of_rooms_label"
          style="@style/TextStyleFieldLabel"
          />
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_large"
          android:layout_marginRight="@dimen/margin_large"
          >
        <ImageButton
            android:id="@+id/btn_decrease_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_remove_accent"
            />
        <TextView
            android:id="@+id/tv_room_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-8dp"
            tools:text="2"
            style="@style/TextStyleEanFieldValue"
            />

        <ImageButton
            android:id="@+id/btn_increase_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="@color/transparent"
            android:src="@drawable/ic_add_accent"
            />
      </FrameLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/margin_small"
          android:layout_marginLeft="@dimen/margin_normal"
          android:layout_marginRight="@dimen/margin_normal"
          android:layout_marginTop="@dimen/margin_small"
          android:background="@color/grey"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_normal"
          android:orientation="horizontal"
          >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

          <TextView
              android:id="@+id/tv_adult_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="@string/occupancy_picker_adults_label"
              android:paddingStart="@dimen/margin_normal"
              style="@style/TextStyleFieldLabel"
              />

          <ImageButton
              android:id="@+id/btn_decrease_adult"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/tv_adult_label"
              android:layout_marginLeft="@dimen/margin_large"
              android:background="@color/transparent"
              android:src="@drawable/ic_remove_accent"
              />
          <TextView
              android:id="@+id/tv_adult_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_adult_label"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:paddingLeft="@dimen/margin_normal"
              android:paddingStart="@dimen/margin_normal"
              tools:text="2"
              style="@style/TextStyleEanFieldValue"
              />

          <ImageButton
              android:id="@+id/btn_increase_adult"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_below="@+id/tv_adult_label"
              android:layout_marginRight="@dimen/margin_normal"
              android:background="@color/transparent"
              android:src="@drawable/ic_add_accent"
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/btn_decrease_adult"
              android:layout_marginBottom="@dimen/margin_small"
              android:layout_marginLeft="@dimen/margin_normal"
              android:layout_marginRight="@dimen/margin_small"
              android:layout_marginTop="@dimen/margin_small"
              android:background="@color/grey"
              />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

          <TextView
              android:id="@+id/tv_children_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/occupancy_picker_children_label"
              android:layout_centerHorizontal="true"
              android:paddingEnd="@dimen/margin_small"
              style="@style/TextStyleFieldLabel"
              />

          <ImageButton
              android:id="@+id/btn_decrease_children"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_children_label"
              android:layout_marginLeft="@dimen/margin_normal"
              android:background="@color/transparent"
              android:src="@drawable/ic_remove_accent"
              />
          <TextView
              android:id="@+id/tv_children_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_children_label"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:paddingEnd="@dimen/margin_normal"
              android:paddingRight="@dimen/margin_normal"
              tools:text="2"
              style="@style/TextStyleEanFieldValue"
              />

          <ImageButton
              android:id="@+id/btn_increase_children"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_below="@+id/tv_children_label"
              android:layout_marginRight="@dimen/margin_large"
              android:background="@color/transparent"
              android:src="@drawable/ic_add_accent"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/btn_decrease_children"
              android:layout_marginBottom="@dimen/margin_small"
              android:layout_marginLeft="@dimen/margin_small"
              android:layout_marginRight="@dimen/margin_normal"
              android:layout_marginTop="@dimen/margin_small"
              android:background="@color/grey"
              />

        </RelativeLayout>
      </LinearLayout>

      <View
          android:id="@+id/child_section_separator"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/margin_small"
          android:background="@color/colorLightGray"
          android:visibility="gone"
          />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_children"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          />

      <TextView
          android:id="@+id/tv_done"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_normal"
          android:background="@color/colorAccent"
          android:clickable="true"
          android:focusable="true"
          android:foreground="?attr/selectableItemBackground"
          android:gravity="center"
          android:letterSpacing="0.1"
          android:padding="@dimen/margin_normal"
          android:text="@string/occupancy_picker_action_done"
          android:textAllCaps="true"
          android:textColor="@color/white"
          android:textStyle="bold"
          />
    </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>