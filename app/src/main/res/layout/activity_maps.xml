<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <fragment xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/map"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context="com.skypremiuminternational.app.app.features.dummy.MapsActivity"
      />

  <LinearLayout
      android:id="@+id/llMarker"
      android:layout_width="180dp"
      android:layout_height="80dp"
      android:background="@drawable/bg_marker_orchid"
      android:orientation="vertical"
      android:visibility="invisible"
      >

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        fontPath="@string/fonts_Lato_Bold"
        tools:ignore="MissingPrefix"
        tools:text="@string/faq_not_found_message"
        style="@style/TextAppearance.AppCompat.Caption"
        />

  </LinearLayout>

</RelativeLayout>