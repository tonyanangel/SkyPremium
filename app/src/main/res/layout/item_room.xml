<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/iv_room"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      />

  <TextView
      android:id="@+id/tv_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="2"
      android:minLines="2"
      android:paddingLeft="@dimen/margin_normal"
      android:paddingRight="@dimen/margin_normal"
      android:paddingTop="@dimen/margin_normal"
      android:textColor="@color/textColorPrimary"
      fontPath="@string/fonts_Lato_Bold"
      tools:ignore="MissingPrefix"
      tools:text="Tailorbird Standard - 1 king bed Tailorbird Standard - 1 king bed Tailorbird Standard - 1 king bed"
      />

  <TextView
      android:id="@+id/tv_occupancy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_small"
      android:maxLines="1"
      android:paddingLeft="@dimen/margin_normal"
      android:paddingRight="@dimen/margin_normal"
      android:textColor="@color/textColorPrimary"
      fontPath="@string/fonts_Lato_Regular"
      tools:ignore="MissingPrefix"
      tools:text="2 Adults, 2 Children (0 - 11yo)"
      />

  <TextView
      android:id="@+id/tv_show_room_detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_normal"
      android:background="@drawable/background_show_room_detials_btn"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:letterSpacing="0.1"
      android:padding="@dimen/margin_normal"
      android:text="@string/item_room_show_room_details"
      android:textAllCaps="true"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/text_size_extra_small"
      fontPath="@string/fonts_Lato_Regular"
      tools:ignore="MissingPrefix"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/tv_amenity0"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="Cancellation Policy"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_amenity1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="Cancellation Policy"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_amenity2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="Cancellation Policy"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_amenity3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="Cancellation Policy"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_amenity4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="Cancellation Policy"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_cancellation_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_dot_black_4dp"
        android:drawablePadding="@dimen/margin_small"
        android:drawableRight="@drawable/ic_help_grey_20dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:text="@string/cancellation_policy_label"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_show_more_amenities"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:text="@string/room_item_show_more_label"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"
        tools:visibility="visible"
        />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5sp"
      android:layout_marginTop="@dimen/margin_small"
      android:background="@color/grey"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_normal"
      >

    <TextView
        android:id="@+id/tv_nightly_price_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.04"
        android:maxWidth="120dp"
        android:text="@string/property_detail_price_per_night_label"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        fontPath="@string/fonts_Lato_Regular"
        tools:ignore="MissingPrefix"
        />

    <TextView
        android:id="@+id/tv_nightly_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:letterSpacing="0.04"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        fontPath="@string/fonts_Lato_Bold"
        tools:ignore="MissingPrefix"
        tools:text="S$1,200,000.00"
        />

    <TextView
        android:id="@+id/tv_excluding_tax_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nightly_price_format"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="@dimen/margin_tiny"
        android:text="@string/excluding_taxes_fees_label"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/tv_book_now"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorAccent"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:letterSpacing="0.1"
      android:padding="@dimen/margin_normal"
      android:text="@string/item_room_book_now_label"
      android:textAllCaps="true"
      android:textColor="@color/white"
      fontPath="@string/fonts_Lato_Regular"
      tools:ignore="MissingPrefix"
      />

</LinearLayout>