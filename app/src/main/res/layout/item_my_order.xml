<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_padding"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingTop="21dp"
    android:paddingRight="@dimen/small_padding"
    android:paddingBottom="21dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvId"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/fonts_Lato_Bold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:letterSpacing="0.05"
            android:text="Order ID: 1234567"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:id="@+id/ll_orderdate_container"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                fontPath="@string/fonts_Lato_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="Order Date"
                android:textAllCaps="true"
                android:textColor="@color/orchid"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="Thu, 10 Aug 2017"
                android:textColor="@color/textColorPrimary"
                android:textSize="12sp"
                tools:text="Thu, 10 Aug 2017" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        tools:ignore="MissingPrefix">

        <TextView
            fontPath="@string/fonts_Lato_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:letterSpacing="0.05"
            android:text="Total Cost"
            android:textAllCaps="true"
            android:textColor="@color/orchid"
            android:textSize="8sp" />

        <TextView
            fontPath="@string/fonts_Lato_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:text="SKY DOLLAR EARNED"
            android:textAllCaps="true"
            android:textColor="@color/orchid"
            android:textSize="8sp" />

        <!--TODO use this for sky$ redeemed once API provides value-->
        <TextView
            fontPath="@string/fonts_Lato_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:text="SKY DOLLAR Redeemed"
            android:textAllCaps="true"
            android:textColor="@color/orchid"
            android:textSize="8sp" />

        <TextView
            fontPath="@string/fonts_Lato_Bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:text="Status"
            android:textAllCaps="true"
            android:textColor="@color/orchid"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCost"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            tools:text="S$5000.00" />

        <TextView
            android:id="@+id/tvSkyEarned"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            tools:text="53.75" />

        <!--TODO use this for sky$ redeemed once API provides value-->
        <TextView
            android:id="@+id/tvSkyRedeemed"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="0.6"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            tools:text="53.75" />

        <TextView
            android:id="@+id/tvStatus"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            tools:text="Processing" />
    </LinearLayout>
</LinearLayout>