<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rlCategoryItem"
    android:layout_height="220dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        tools:src="@drawable/img_home_banner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightTransparentBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="48dp"
        android:paddingRight="16dp"
        android:paddingBottom="48dp">

        <TextView
            android:id="@+id/tvHeading"
            style="@style/TextAppearance.AppCompat.Headline"
            fontPath="@string/fonts_Adobe_Garamond_Pro_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/white"
            tools:ignore="MissingPrefix"
            tools:text="@string/travel" />

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="Lorem Ipsum is simply dummy text" />

    </LinearLayout>

</RelativeLayout>