<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    style="@style/ToolbarNoElevation"
    android:background="@color/colorPrimary">

  <ImageView
      android:id="@+id/ivNavigation_toolbar"
      style="@style/ToolbarIcon"
      android:src="@drawable/ic_homeasup_accent"/>

  <ImageView style="@style/ToolbarIcon"/>

  <TextView
      android:id="@+id/tvTitle_toolbar"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:textColor="@color/textTitleColor"
      android:gravity="center_vertical|center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      fontPath="@string/fonts_Adobe_Garamond_Pro_Regular"
      android:letterSpacing="0.03"
      tools:text="My Order"
      tools:ignore="MissingPrefix"/>

  <ImageView
      style="@style/ToolbarIcon"
      android:src="@drawable/ic_search_accent"
      android:visibility="invisible"/>

  <RelativeLayout
      android:layout_width="48dp"
      android:layout_height="48dp">

    <ImageView
        style="@style/ToolbarIcon"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="@drawable/circle_orchid"
        android:padding="1dp"
        android:visibility="invisible">

      <TextView
          style="@style/TextAppearance.AppCompat.Caption"
          android:layout_width="14dp"
          android:layout_height="14dp"
          android:gravity="center"
          android:text="9"
          android:textColor="@color/white"/>

    </FrameLayout>

  </RelativeLayout>

</LinearLayout>